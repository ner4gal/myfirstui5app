<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="mickey.controller.Main" xmlns:l="sap.ui.layout.form">
    <l:SimpleForm  id="idForm" editable="true" layout="ResponsiveGridLayout"  >
          <l:content>
                <Label text="Emp Id " />
                <Input width="20%"  id="idEmpId" value="{/empArr/0/empId}" />
                <Label text="Emp Name " /> 
                <Input width="35%" id="idEmpName" value="{/empArr/0/empName}" />
                <Label text="Emp Age " />
                <Input width="20%" id="idEmpAge" value="{/empArr/0/empAge}" />
                <Label text="Emp Salary " />
                <Input width="25%" id="idEmpSal" value="{/empArr/0/empSal}"/>
                <Label text="Currency " />
                <Input width="25%" id="idEmpCurr" value="{/empArr/0/empCurr}" />
                <Label text="Smoker " />
                <CheckBox id="idSmoker" selected="{/empArr/0/smoker}"></CheckBox>
                <Button width="25%" text="click xml button" press="onSubmit" />
          </l:content>
    </l:SimpleForm>
</mvc:View>